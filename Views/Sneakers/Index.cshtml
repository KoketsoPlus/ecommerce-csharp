@model IEnumerable<ecommerce_csharp.Models.Sneaker>

<h2 class="mb-4">
    @ViewContext.HttpContext.Request.Query["gender"] Sneakers
</h2>

<div class="row">
    @if (Model != null && Model.Any())
    {
        @foreach (var sneaker in Model)
        {
            <div class="col-md-3 mb-4">
                <div class="card h-100 sneaker-card">
                    <img src="@sneaker.ImageUrl"
                         class="card-img-top"
                         alt="@sneaker.Name" />

                    <div class="card-body text-center">
                        <h5 class="card-title">@sneaker.Name</h5>
                        <p class="card-text fw-bold">R @sneaker.Price</p>

                        <button class="btn add-to-cart-btn">
                            🛒 Add to Cart
                        </button>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <p>No sneakers found for this category 👟</p>
    }
</div>
