@model List<ecommerce_csharp.Models.CartItem>

<h2>Your Cart</h2>

@if (!Model.Any())
{
    <p>Your cart is empty</p>
}
else
{
    <table border="1" cellpadding="10">
        <tr>
            <th>Image</th>
            <th>Sneaker</th>
            <th>Price</th>
            <th>Qty</th>
            <th>Total</th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="@item.Sneaker.ImageUrl"
                         alt="@item.Sneaker.Name"
                         style="width:80px; height:auto;" />
                </td>
                <td>@item.Sneaker.Name</td>
                <td>R @item.Sneaker.Price</td>
                <td>@item.Quantity</td>
                <td>R @(item.Sneaker.Price* item.Quantity)</td>
                <td>
                    <form asp-controller="Cart"
                          asp-action="Remove"
                          asp-route-id="@item.Sneaker.Id"
                          method="post">
                        <button type="submit">Remove</button>
                    </form>
                </td>
            </tr>
        }
    </table>

    <h3>Total: R @ViewBag.Total</h3>
}

